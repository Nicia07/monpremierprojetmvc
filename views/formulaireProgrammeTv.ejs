<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulaire de Programmation TV</title>
    <link rel="stylesheet" href="/CSS/formulaire.css">
    

    
</head>
<body>
    <h1>Formulaire de Programmation TV</h1>
    <%- include("navbar") %>

    <form class="form-container" action="/submit-programme" method="POST">
        <div class="form-row">
            <!-- Nom -->
            <label for="nom">Nom</label>
            <input type="text" id="nom" name="nom" required placeholder="Entrez le nom">
    
            <!-- Type de programme -->
            <label for="type_programme">Type de programme</label>
            <select id="type_programme" name="type_programme" required>
                <option value="Chigoma">Chigoma</option>
                <option value="dance traditionnel">Dance traditionnel</option>
                <option value="deba">Deba</option>
                <option value="manzaraka">Manzaraka</option>
                <option value="chants">Chants</option>
                <option value="mbiwi">mbiwi</option>
                <option value="animation">Animation</option>
                <option value="actualités">Actualités</option>
            </select>
    
            <!-- Date de diffusion -->
            <label for="date_diffusion">Date de diffusion</label>
            <input type="date" id="date_diffusion" name="date_diffusion" required>
    
            <!-- Nom du canal -->
            <label for="canal_diffusion">Nom du canal</label>
            <input type="text" id="canal_diffusion" name="canal_diffusion" placeholder="Nom du canal" required>
    
            <!-- Lien YouTube -->
            <label for="lien_youtube">Lien YouTube</label>
            <input type="url" id="lien_youtube" name="lien_youtube" placeholder="Lien YouTube" required>
        </div>
    
        <button type="submit">Envoyer</button>
    </form>
    
    <%- include('footer') %>
</body>
</html>
